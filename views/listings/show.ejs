<% layout("/layouts/boilerplate") %>

<body>
  <div class="card mb-3 mt-5 mx-0" style="max-width: 100%">
    <div class="row g-0 g-md-5">
      <div class="col-md-4 card-h-match">
        <img
          src="<%= listing.image.url %>"
          class="img-fluid rounded show-img"
          alt="<%= listing.image.filename %>"
        />
      </div>
      <div class="col-md-8 card-h-match">
        <div class="card-body">
          <p class="card-text float-end p-1"><i class="fa-solid fa-star fa-sm" style="color: #000;"></i> <%= listing.avgRating %> Ratings</p> 
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
          <p class="card-text">
            <small class="text-body-secondary">
              <%= listing.location %>, <%= listing.country %>
            </small>
          </p>

          <h6 class="">Hosted by <%= listing.owner.username %></h6>

          <!-- BUTTONS -->
          <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
          <div class="d-flex gap-3 mt-3">
            <a href="/listings/<%= listing._id %>/edit">
              <button type="button" class="btn btn-primary btn-sm px-3">
                Edit
              </button>
            </a>

            <form
              method="POST"
              action="/listings/<%= listing._id %>?_method=DELETE"
            >
              <button type="submit" class="btn btn-secondary btn-sm">
                Delete
              </button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <hr />

    <!-- Review Form -->
    <% if(currentUser) { %>
    <form
      method="POST"
      action="/listings/<%= listing._id %>/reviews"
      novalidate
      class="col-8 needs-validation"
    >
      <lable for="rating" class="form-lable p-1">Rating</lable>
      <fieldset class="starability-grow">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="0"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      <br />

      <lable for="comment" class="form-lable">Comments</lable>
      <textarea
        name="review[comment]"
        cols="6"
        rows="3"
        class="form-control"
        id="comment"
        required
      ></textarea>
      <div class="invalid-feedback">please add review</div>
      <br />
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <br />
    <% } %>

    <!-- SHOW REVIEWS -->
    <h5 class="card-title">
      <%= listing.reviews.length > 0 ? "All Reviews" : "Be the first to review"%>
    </h5>

    <div class="row align-items-start">
      <% for(let review of listing.reviews) { %>
      <div class="card col-5 mb-3" style="max-width: 20rem; max-height: 15rem">
        <div class="card-header ps-3">
          @<%= review.author.username %>
          <!-- DATE -->
          <p class="card-date">
            <small class="text-body-secondary">
              <%= new Date(review.created_at).toLocaleDateString('en-GB', { day:
              '2-digit', month: 'long', year: 'numeric' }) %>
            </small>
          </p>
        </div>
        <div class="card-body ps-3 overflow-auto">
          <p class="starability-result card-text" 
            data-rating="<%= review.rating %>">
          </p>
          <p class="card-text"><%= review.comment %></p>
        </div>

        <!-- Trash icon bottom -->
        <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
        <form
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE"
        >
          <div class="text-end">
            <button type="submit" class="btn">
              <i class="fa-solid fa-trash-can"></i>
            </button>
          </div>
        </form>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</body>
